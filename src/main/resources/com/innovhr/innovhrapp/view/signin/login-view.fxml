<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.innovhr.innovhrapp.controllers.LoginController">
    <TextField fx:id="usernameField" promptText="Username">
        <VBox.margin>
            <Insets left="100.0" right="100.0" />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="passwordField" promptText="Password">
        <VBox.margin>
            <Insets left="100.0" right="100.0" />
        </VBox.margin>
    </PasswordField>
    <Button onAction="#handleLoginAction" prefHeight="25.0" prefWidth="291.0" text="Login">
        <VBox.margin>
            <Insets left="100.0" right="100.0" />
        </VBox.margin>
    </Button>
</VBox>

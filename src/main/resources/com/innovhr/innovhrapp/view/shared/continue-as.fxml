<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="roleSelectionBox" alignment="CENTER" spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.innovhr.innovhrapp.controllers.shared.ContinueAsController">
    <Text fill="#6f6f6f" strokeType="OUTSIDE" strokeWidth="0.0" text="Select your role" textAlignment="CENTER" wrappingWidth="932.875">
        <font>
            <Font name="System Bold Italic" size="59.0" />
        </font>
    </Text>
    <HBox alignment="CENTER" spacing="10.0">

        <Button fx:id="adminButton" onAction="#handleAdminSelection" prefHeight="100.0" prefWidth="200.0" text="Admin" visible="false">
            <tooltip>
                <Tooltip text="Access Admin Features" />
            </tooltip>
        </Button>
        <Button fx:id="managerButton" onAction="#handleManagerSelection" prefHeight="100.0" prefWidth="200.0" text="Manager" visible="false">
            <tooltip>
                <Tooltip text="Access Manager Features" />
            </tooltip>
        </Button>
        <Button fx:id="collabButton" onAction="#handleCollabSelection" prefHeight="100.0" prefWidth="200.0" text="Collaborator" visible="false">
            <tooltip>
                <Tooltip text="Access Collaborator Features" />
            </tooltip>
        </Button>
    </HBox>

</VBox>
